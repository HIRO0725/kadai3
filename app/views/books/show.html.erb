<h2>book show</h2>
<div>
    <div class="hidari">
        <div>
            <%= image_tag @user.get_profile_image(100,100) %>
            <h3>name</h3>
            <%= @user.name %>
            <h3>introduction</h3>
            <%= @user.introduction %>
        </div>
        <p>
            <% if @user == current_user %>
                <%= link_to edit_user_path(current_user.id) do %>
                    <i class="fas fa-user-cog"></i>
                <%end%>
            <% else %>
                <%= link_to user_path(current_user.id) do %>
                    <i class="fas fa-user-cog"></i>
                <%end%>
            <%end%>
        </p>
  
        <h2>New Book</h2>

        <%= form_with model: @book do |f| %>
            <div class="sounyu">
            <h4 class="create">Title</h4>
            <%= f.text_field :title %>
            </div>
            <div class="sounyu">
            <h4 class="create">Opinion</h4>
            <%= f.text_area :body %>
            </div>
            <p class="create create2"><%= f.submit 'Create Book' %></p>
        <% end %>
    </div>
    <div class="migi">
        <span><%= image_tag @book.user.get_profile_image(100,100) %></span>
        <span>
            <%= link_to user_path(@book.user.id) do %>
                <span><%= @book.user.name %></span>
            <%end%>
        </span>
        <span>
            <%= link_to book_path(@book.id) do %>
                <span><%= @book.title %></span>
            <%end%>
        </span>
        <span><%= @book.body %></span>
        <% if @book.user == current_user %>
            <span><%= link_to "Edit", edit_book_path(@book.id) %></span>
            <span><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？" %></span>
        <%end%>
</div>