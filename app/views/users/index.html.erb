<div>
    <div class="hidari">
        <div>
            <%= image_tag @user.get_profile_image(100,100) %>
            <h3>name</h3>
            <%= @user.name %>
            <h3>introduction</h3>
            <%= @user.introduction %>
        </div>
        <p>
            <% if @user == current_user %>
                <%= link_to edit_user_path(current_user.id) do %>
                    <i class="fas fa-user-cog"></i>
                <%end%>
            <% else %>
                <%= link_to user_path(current_user.id) do %>
                    <i class="fas fa-user-cog"></i>
                <%end%>
            <%end%>
        </p>
  
        <h2>New Book</h2>

        <%= form_with model: @book do |f| %>
            <div class="sounyu">
            <h4 class="create">Title</h4>
            <%= f.text_field :title %>
            </div>
            <div class="sounyu">
            <h4 class="create">Opinion</h4>
            <%= f.text_area :body %>
            </div>
            <p class="create create2"><%= f.submit 'Create Book' %></p>
        <% end %>
    </div>
    <div class="migi">
        <% @users.each do |user| %>
        <span><%= image_tag user.get_profile_image(100,100) %></span>
        <span><%= user.name %></span>
        <%= link_to "Show", user_path(user.id) %>
        <%end%>
    </div>
</div>